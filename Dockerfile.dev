# Development Dockerfile für Running Dinner
FROM python:3.11-slim AS development

# System Dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    git \
    curl \
    netcat-traditional \
    && rm -rf /var/lib/apt/lists/*

# Arbeitsverzeichnis
WORKDIR /app

# Python Dependencies
COPY requirements.txt .
RUN pip install --upgrade pip && pip install -r requirements.txt

# Wait Script für Database
COPY scripts/wait-for-db.sh /wait-for-db.sh
RUN chmod +x /wait-for-db.sh

# Development User - Create with specific UID/GID
RUN groupadd -g 1000 vscode && \
    useradd -u 1000 -g 1000 -m -s /bin/bash vscode && \
    chown -R vscode:vscode /app && \
    mkdir -p /app/staticfiles /app/media && \
    chown -R vscode:vscode /app/staticfiles /app/media
USER vscode

# Port
EXPOSE 8000

# Development Command with DB wait
CMD ["/wait-for-db.sh", "db", "5432", "--", "python", "manage.py", "runserver", "0.0.0.0:8000"]